<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlueModasWeb.UI.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!--Navbar-->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-action="Produtos" asp-controller="Home">
            <img class="rounded-circle" src="~/images/bluemodas.jpg" height="100px" />
        </a>
        <div class="collapse navbar-collapse justify-content-center">
            <ul class="navbar-nav" id="divTipoPublicoAlvo"></ul>
        </div>
        <div class="justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        Carrinho <i class="fas fa-shopping-cart"></i>
                        <span class="label"> 23 </span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <!--/.Navbar-->
    <div class="container" style="margin-top: 150px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    (function() {
        $.get("@Url.Action("TipoPublicoAlvoDropDownList", "TipoPublicoAlvo")").done(function(data) {
            if (data)
                $("#divTipoPublicoAlvo").html(data);
        });
    })();
</script>
