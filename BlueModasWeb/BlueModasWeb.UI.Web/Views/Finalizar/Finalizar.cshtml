@model BlueModasWeb.UI.Web.ViewModel.Carrinho.CarrinhoViewModel
@{ Layout = null;}

<div class="col-lg-8 mb-4">
    <div class="card pb-1">
        <div class="card-body">
            <h5 class="mb-2">Detalhes da cobrança</h5>
            <div class="row mb-4">
                <div class="col-lg-6">
                    <input type="text" id="firstName" class="form-control">
                    <label>Nome</label>
                </div>
                <div class="col-lg-6">
                    <input type="text" id="lastName" class="form-control">
                    <label>Sobrenome</label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-7">
                    <input type="email" id="companyName" class="form-control">
                    <label>Email</label>
                </div>
                <div class="col-lg-5">
                    <input type="text" id="telefone" class="form-control">
                    <label>Telefone (xx) xxxxx-xxxx</label>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-4">
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="mb-3">Sua compra</h5>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                    <div>
                        <strong>Valor Total:</strong>
                    </div>
                    <span>
                        <strong id="spnValorTotal">R$ @Model.ValorTotal.ToString("N2")</strong>
                    </span>
                </li>
            </ul>
            <button type="button" class="btn btn-success btn-block" onclick="finalizarCompra()">Confirmar compra</button>
        </div>
    </div>
</div>